  <%= csrf_meta_tags %>
  
  
  <!-- Initialize bgStretcher -->
<%= render 'bgStretcherInitialize.js', :content_type => 'application/js'%>	
<%= render 'blueberryInitialize.js', :content_type => 'application/js'%>


</head>
<body>
	<header id="top-header" class="">
		<div class="container_12" id="header-wrapper">
		<div id="logo" role="logo"><h1>Boston Volunteers</h1></div>
				
<aside id="social-media-box" class="right">
				<div id="twitter-row"><%=link_to image_tag("twitter.png"), ("https://twitter.com/#!/BostonVolunteer"), :class => 'left right-padding' %>
					<%=link_to "Follow Boston Volunteers on Twitter!", ("https://twitter.com/#!/BostonVolunteer"), :class => 'small'  %>
			 
					<a href="https://twitter.com/share" class="twitter-share-button" data-text="Enjoy helping others? Learn how at BostonVounteer.org!" data-via="BostonVolunteer" data-size="small">Tweet</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
				</div>	<!-- end twitter row -->
					
				<div class="clearfix"></div>
			
				<div id="facebook-row" class="">
				<%=link_to image_tag("facebook.png"), ("https://www.facebook.com/BostonVolunteers"), :class => 'left' %>
				<div id="fb-root" class="small left">
				<script>(function(d, s, id) {
				  var js, fjs = d.getElementsByTagName(s)[0];
				  if (d.getElementById(id)) return;
				  js = d.createElement(s); js.id = id;
				  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
				  fjs.parentNode.insertBefore(js, fjs);
				}(document, 'script', 'facebook-jssdk'));</script>
		
			<div class="fb-like" data-href="https://www.facebook.com/BostonVolunteers" data-send="false" data-width="310px" 	 data-show-faces="false"></div>
		
				</div>
			</div> <!-- end facebook row -->
		
			<div class="clearfix"></div>
		
			<%=link_to image_tag("meetup.png"), ("http://www.meetup.com/The-Boston-Volunteer-Meetup-Who-else-likes-to-help-others/"), :class => 'left right-padding' %>
			<%=link_to "Join the Boston Volunteers Meetup!", ("http://www.meetup.com/The-Boston-Volunteer-Meetup-Who-else-likes-to-help-others/"), :class => 'small' %>
			
</aside>
	<div class="clearfix bottom-padding"></div>		
		
