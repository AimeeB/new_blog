  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "libs/jquery-1.6.2", :media => "all" %>
  <%= javascript_include_tag "libs/jquery-1.6.2.min", :media => "all" %>
  <%= javascript_include_tag "libs/modernizr-2.0.6.min", :media => "all" %>
  <%= javascript_include_tag    "jquery.blueberry", :media => "all" %>
  <%= javascript_include_tag    "bgstretcher", :media => "all" %>
